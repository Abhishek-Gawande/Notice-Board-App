<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/diplomata"
        android:gravity="center"
        android:text="Upload Files"
        android:textAlignment="center"
        android:textColor="#795548"
        android:textSize="26sp"
        android:textStyle="bold|italic" />


    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView16"
        android:layout_marginBottom="25dp"
        android:layout_toStartOf="@+id/textView18"
        app:srcCompat="@mipmap/ic_collections_black_48dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="129dp"
        android:layout_toEndOf="@+id/imageView15"
        android:text="Upload Image/Text"
        android:textColor="#795548"
        android:textSize="18dp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView17"
        android:layout_below="@+id/textView16"
        android:layout_marginStart="25dp"
        android:layout_marginTop="67dp"
        app:srcCompat="@mipmap/ic_picture_as_pdf_black_48dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView15"
        android:layout_marginStart="23dp"
        android:layout_marginTop="11dp"
        android:text="Upload Pdf"
        android:textColor="#795548"
        android:textSize="22dp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView17"
        android:layout_toEndOf="@+id/textView16"
        app:srcCompat="@mipmap/ic_camera_black_48dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:text="Upload By Camera"
        android:textColor="#795548"
        android:textSize="22dp"
        android:textStyle="bold|italic" />


</RelativeLayout>